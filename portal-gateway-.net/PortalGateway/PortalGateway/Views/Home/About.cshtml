@{
    ViewBag.Title = "About this application";
}

@model AboutViewModel

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <h2>About</h2>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" contenteditable="true">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3 text-muted">@Html.LabelFor(m => m.Application)&nbsp;:</div>
                    <div class="col-sm-9 text-muted">@Html.DisplayFor(m => m.Application)</div>
                </div>
                <div class="row">
                    <div class="col-sm-3 text-muted">@Html.LabelFor(m => m.Description)&nbsp;:</div>
                    <div class="col-sm-9 text-muted">@Html.DisplayFor(m => m.Description)</div>
                </div>
                <div class="row">
                    <div class="col-sm-3 text-muted">@Html.LabelFor(m => m.Version)&nbsp;:</div>
                    <div class="col-sm-9 text-muted">@Html.DisplayFor(m => m.Version)</div>
                </div>
                <br />
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>